<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>hospital.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeServlet</servlet-name>
        <servlet-class>hospital.homeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>passwordServlet</servlet-name>
        <servlet-class>hospital.passwordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addpatientServlet</servlet-name>
        <servlet-class>hospital.addpatientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>hospital.logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewPatient</servlet-name>
        <servlet-class>hospital.viewPatient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePatientServlet</servlet-name>
        <servlet-class>hospital.UpdatePatientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookAppointmentServlet</servlet-name>
        <servlet-class>hospital.bookAppointmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>treatmentServlet</servlet-name>
        <servlet-class>hospital.treatmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Actual_treatmentServlet</servlet-name>
        <servlet-class>hospital.Actual_treatmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/homeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>passwordServlet</servlet-name>
        <url-pattern>/passwordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addpatientServlet</servlet-name>
        <url-pattern>/addpatientServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewPatient</servlet-name>
        <url-pattern>/viewPatient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePatientServlet</servlet-name>
        <url-pattern>/UpdatePatientServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookAppointmentServlet</servlet-name>
        <url-pattern>/bookAppointmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>treatmentServlet</servlet-name>
        <url-pattern>/treatmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Actual_treatmentServlet</servlet-name>
        <url-pattern>/Actual_treatmentServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
